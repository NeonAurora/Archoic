---
import MainLayout from '../layouts/MainLayout.astro';
import CloudIcon from '../components/icons/CloudIcon.astro';
import SmartphoneIcon from '../components/icons/SmartphoneIcon.astro';
import BrainIcon from '../components/icons/BrainIcon.astro';
import BuildingIcon from '../components/icons/BuildingIcon.astro';

const services = [
  {
    id: 'saas-development',
    title: 'SaaS Development',
    description: 'Building scalable, cloud-based software-as-a-service platforms tailored to business needs with multi-tenant architecture and secure cloud deployment.',
    icon: CloudIcon,
    features: ['Multi-tenant Architecture', 'Cloud Infrastructure', 'API Integration', 'Security First']
  },
  {
    id: 'mobile-app-development',
    title: 'Mobile App Development',
    description: 'Crafting intuitive iOS and Android applications with seamless user experience and modern design that users love.',
    icon: SmartphoneIcon,
    features: ['iOS & Android', 'Cross-platform', 'UI/UX Design', 'Performance Optimized']
  },
  {
    id: 'ai-ml-solutions',
    title: 'AI & Machine Learning Solutions',
    description: 'Implementing intelligent systems and predictive analytics to automate processes and drive insights for your business.',
    icon: BrainIcon,
    features: ['Predictive Analytics', 'Process Automation', 'Data Intelligence', 'Custom ML Models']
  },
  {
    id: 'enterprise-software',
    title: 'Enterprise Software',
    description: 'Developing robust enterprise-grade software solutions for business process management, integration, and scalability.',
    icon: BuildingIcon,
    features: ['Process Management', 'System Integration', 'Scalable Architecture', 'Mission Critical']
  }
];
---

<MainLayout 
  title="Our Services - Archoic" 
  description="Specialized software services including SaaS development, mobile apps, AI/ML solutions, and enterprise software"
>
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <div class="hero-content scroll-reveal">
        <h1>Our Services</h1>
        <p class="lead">Our specialized software services include</p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="services-section section">
    <div class="container">
      <div class="services-grid scroll-reveal-stagger">
        {services.map((service) => {
          const Icon = service.icon;
          return (
            <a href={`/services/${service.id}`} class="service-card frost-card">
              <div class="service-icon">
                <Icon size={48} />
              </div>
              <h2>{service.title}</h2>
              <p class="service-description">{service.description}</p>
              <ul class="service-features">
                {service.features.map(feature => (
                  <li>{feature}</li>
                ))}
              </ul>
              <div class="learn-more">
                Learn More
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta section">
    <div class="container">
      <div class="cta-content scroll-reveal">
        <h2>Ready to Start Your Project?</h2>
        <p>Contact us to discuss how we can build a scalable solution for you</p>
        <a href="/contact" class="btn btn-primary btn-large">Get in Touch</a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .page-hero {
    padding: calc(var(--header-height) + var(--space-16)) 0 var(--space-12);
    background: var(--gradient-subtle);
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: var(--space-4);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .lead {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .services-section {
    padding: var(--space-16) 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
    max-width: 1200px;
    margin: 0 auto;
  }

  .service-card {
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary-500), var(--color-accent-500));
    opacity: 0;
    transition: opacity var(--transition-base);
    border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .service-card:hover::before {
    opacity: 1;
  }

  .service-icon {
    color: var(--color-primary-600);
    margin-bottom: var(--space-5);
    display: flex;
  }

  .service-card h2 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-3);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .service-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-5);
    line-height: var(--line-height-relaxed);
    flex-grow: 1;
  }

  .service-features {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
    margin-bottom: var(--space-5);
    padding: 0;
  }

  .service-features li {
    color: var(--color-text-secondary);
    padding-left: var(--space-5);
    position: relative;
    font-size: var(--font-size-sm);
  }

  .service-features li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 12px;
    height: 12px;
    background: var(--color-primary-600);
    border-radius: 50%;
  }

  .learn-more {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-primary-600);
    font-weight: 600;
    font-size: var(--font-size-sm);
    margin-top: auto;
  }

  .learn-more svg {
    transition: transform var(--transition-base);
  }

  .service-card:hover .learn-more svg {
    transform: translateX(4px);
  }

  .cta {
    background: var(--gradient-frost);
    border-radius: var(--radius-2xl);
    margin-inline: var(--content-padding);
    position: relative;
    overflow: hidden;
  }

  .cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-accent-600) 100%);
    opacity: 0.9;
  }

  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--space-16);
  }

  .cta h2,
  .cta p {
    color: white;
  }

  .cta h2 {
    margin-bottom: var(--space-4);
    font-weight: 600;
    font-size: var(--font-size-3xl);
  }

  .cta p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-8);
    opacity: 0.95;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-8);
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    text-decoration: none;
    border: 1px solid transparent;
    font-size: var(--font-size-base);
  }

  .btn-primary {
    background: white;
    color: var(--color-primary-700);
    border-color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .btn-large {
    padding: var(--space-4) var(--space-10);
    font-size: var(--font-size-lg);
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .service-features {
      grid-template-columns: 1fr;
    }
  }
</style>