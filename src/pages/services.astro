<style>
  .page-hero {
    padding: calc(var(--header-height) + var(--space-16)) 0 var(--space-12);
    background: var(--gradient-subtle);
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: var(--space-4);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .lead {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .services-section {
    padding: var(--space-16) 0;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-6);
  }

  .service-card {
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
  }

  .service-card h2 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-3);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .service-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-5);
    line-height: var(--line-height-relaxed);
  }

  .service-features {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .service-features li {
    color: var(--color-text-secondary);
    padding-left: var(--space-5);
    position: relative;
    font-size: var(--font-size-sm);
  }

  .service-features li::before {
    content: '‚Üí';
    position: absolute;
    left: 0;
    color: var(--color-primary-600);
    font-weight: bold;
  }

  .cta {
    background: var(--gradient-frost);
    border-radius: var(--radius-2xl);
    margin-inline: var(--content-padding);
    position: relative;
    overflow: hidden;
  }

  .cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-accent-600) 100%);
    opacity: 0.9;
  }

  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--space-16);
  }

  .cta h2,
  .cta p {
    color: white;
  }

  .cta h2 {
    margin-bottom: var(--space-4);
    font-weight: 600;
  }

  .cta p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-8);
    opacity: 0.95;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-8);
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    text-decoration: none;
    border: 1px solid transparent;
    font-size: var(--font-size-base);
  }

  .btn-primary {
    background: white;
    color: var(--color-primary-700);
    border-color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .btn-large {
    padding: var(--space-4) var(--space-10);
    font-size: var(--font-size-lg);
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>