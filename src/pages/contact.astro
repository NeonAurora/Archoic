---
import MainLayout from '../layouts/MainLayout.astro';
import MailIcon from '../components/icons/MailIcon.astro';
import PhoneIcon from '../components/icons/PhoneIcon.astro';
import MapPinIcon from '../components/icons/MapPinIcon.astro';
import ClockIcon from '../components/icons/ClockIcon.astro';
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import TwitterIcon from '../components/icons/TwitterIcon.astro';
---

<MainLayout 
  title="Contact Us - Archoic" 
  description="Get in touch with Archoic. We'd love to hear from you and respond within one business day."
>
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <div class="hero-content scroll-reveal">
        <h1>Contact</h1>
        <p class="lead">We'd love to hear from you. Get in touch through any of the following channels.</p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact-section section">
    <div class="container">
      <div class="contact-grid">
        
        <!-- Contact Form -->
        <div class="contact-form-wrapper scroll-reveal">
          <h2>Send us a Message</h2>
          <p class="form-intro">Fill out our form and we'll respond within one business day.</p>
          
          <form class="contact-form" action="#" method="POST">
            <div class="form-group">
              <label for="name">Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                placeholder="Your full name"
              />
            </div>

            <div class="form-group">
              <label for="email">Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                placeholder="your.email@example.com"
              />
            </div>

            <div class="form-group">
              <label for="company">Company</label>
              <input 
                type="text" 
                id="company" 
                name="company" 
                placeholder="Your company name"
              />
            </div>

            <div class="form-group">
              <label for="message">Message *</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                placeholder="Tell us about your project or inquiry..."
              ></textarea>
            </div>

            <button type="submit" class="btn btn-primary btn-full">Send Message</button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="contact-info scroll-reveal">
          <div class="info-card frost-card">
            <h2>Get in Touch</h2>
            <p class="info-intro">
              We provide multiple contact options to ensure your experience is smooth and transparent – no query goes unanswered.
            </p>

            <div class="contact-methods">
              
              <div class="contact-method">
                <div class="method-icon">
                  <MailIcon size={24} />
                </div>
                <div class="method-details">
                  <h3>Email</h3>
                  <a href="mailto:contact@archoic.com">contact@archoic.com</a>
                  <p class="method-note">Drop us an email for direct inquiries or proposals</p>
                </div>
              </div>

              <div class="contact-method">
                <div class="method-icon">
                  <PhoneIcon size={24} />
                </div>
                <div class="method-details">
                  <h3>Phone</h3>
                  <a href="tel:+18001234567">+1 (800) 123-4567</a>
                  <p class="method-note">Available 9am–6pm (local time) for any questions or consultations</p>
                </div>
              </div>

              <div class="contact-method">
                <div class="method-icon">
                  <MapPinIcon size={24} />
                </div>
                <div class="method-details">
                  <h3>Office</h3>
                  <p>1234 Innovation Drive, Suite 100<br/>Dhaka</p>
                  <a href="https://maps.google.com/?q=1234+Innovation+Drive+Dhaka" target="_blank" class="map-link">View on Map</a>
                  <p class="method-note">You're welcome to visit us (by appointment)</p>
                </div>
              </div>

              <div class="contact-method">
                <div class="method-icon">
                  <ClockIcon size={24} />
                </div>
                <div class="method-details">
                  <h3>Business Hours</h3>
                  <p>Monday - Friday<br/>9:00 AM - 6:00 PM</p>
                </div>
              </div>

            </div>
          </div>

          <div class="info-card frost-card social-card">
            <h3>Connect With Us</h3>
            <p>Follow us on social media for updates and quick messages</p>
            <div class="social-links">
              <a href="https://linkedin.com/company/archoic" target="_blank" aria-label="LinkedIn" class="social-link">
                <LinkedInIcon size={20} />
                <span>LinkedIn</span>
              </a>
              <a href="https://twitter.com/archoic" target="_blank" aria-label="Twitter" class="social-link">
                <TwitterIcon size={20} />
                <span>Twitter</span>
              </a>
            </div>
          </div>

          <div class="info-card frost-card support-card">
            <p class="support-note">
              <strong>Existing clients?</strong> If you're looking for help with an ongoing project, please visit our <a href="/support">Support page</a> for dedicated assistance.
            </p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section section">
    <div class="container">
      <div class="cta-content scroll-reveal frost-card">
        <h2>Ready to Start Your Project?</h2>
        <p>Have a question or ready to begin? Reach out now and we'll guide you through the next steps. We're here to make your vision a reality.</p>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .page-hero {
    padding: calc(var(--header-height) + var(--space-16)) 0 var(--space-12);
    background: var(--gradient-subtle);
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-content h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: var(--space-4);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .lead {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .contact-section {
    padding: var(--space-16) 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-12);
    max-width: 1200px;
    margin: 0 auto;
    align-items: start;
  }

  /* Contact Form */
  .contact-form-wrapper h2 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-3);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .form-intro {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
    line-height: var(--line-height-relaxed);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-group label {
    font-weight: var(--font-weight-medium);
    color: var(--color-text-primary);
    font-size: var(--font-size-sm);
  }

  .form-group input,
  .form-group textarea {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-surface);
    color: var(--color-text-primary);
    font-size: var(--font-size-base);
    font-family: inherit;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
    width: 100%;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-text-tertiary);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary-600);
    box-shadow: 0 0 0 3px rgba(101, 117, 142, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 140px;
    line-height: var(--line-height-relaxed);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-8);
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    text-decoration: none;
    border: none;
    font-size: var(--font-size-base);
    cursor: pointer;
    font-family: inherit;
  }

  .btn-primary {
    background: var(--color-primary-600);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-700);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-full {
    width: 100%;
    padding: var(--space-4);
    font-size: var(--font-size-lg);
  }

  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    position: sticky;
    top: calc(var(--header-height) + var(--space-6));
  }

  .info-card {
    padding: var(--space-8);
    border-radius: var(--radius-xl);
  }

  .info-card h2 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-3);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .info-card h3 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-2);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .info-intro {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
    line-height: var(--line-height-relaxed);
    font-size: var(--font-size-sm);
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .contact-method {
    display: flex;
    gap: var(--space-4);
    align-items: flex-start;
  }

  .method-icon {
    color: var(--color-primary-600);
    flex-shrink: 0;
    line-height: 1;
    padding-top: 2px;
  }

  .method-details {
    flex: 1;
  }

  .method-details h3 {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-2);
    color: var(--color-text-primary);
  }

  .method-details a {
    color: var(--color-primary-600);
    text-decoration: none;
    transition: color var(--transition-fast);
    font-size: var(--font-size-base);
    font-weight: 500;
    display: block;
    margin-bottom: var(--space-2);
  }

  .method-details a:hover {
    color: var(--color-primary-700);
    text-decoration: underline;
  }

  .method-details p {
    color: var(--color-text-secondary);
    margin: 0;
    line-height: var(--line-height-relaxed);
    font-size: var(--font-size-sm);
  }

  .method-note {
    margin-top: var(--space-2);
    font-style: italic;
  }

  .map-link {
    font-size: var(--font-size-sm);
    margin-top: var(--space-2);
  }

  /* Social Card */
  .social-card h3 {
    margin-bottom: var(--space-3);
  }

  .social-card p {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-5);
    font-size: var(--font-size-sm);
  }

  .social-links {
    display: flex;
    gap: var(--space-4);
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-primary);
    text-decoration: none;
    transition: all var(--transition-fast);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .social-link:hover {
    border-color: var(--color-primary-600);
    background: var(--color-primary-50);
    color: var(--color-primary-600);
    transform: translateY(-2px);
  }

  /* Support Card */
  .support-card {
    background: var(--color-accent-50);
    border: 1px solid var(--color-accent-200);
  }

  .support-note {
    margin: 0;
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
  }

  .support-note strong {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .support-note a {
    color: var(--color-primary-600);
    text-decoration: none;
    font-weight: 500;
  }

  .support-note a:hover {
    text-decoration: underline;
  }

  /* CTA Section */
  .cta-section {
    padding: var(--space-12) 0 var(--space-20);
  }

  .cta-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    padding: var(--space-12);
    border-radius: var(--radius-2xl);
  }

  .cta-content h2 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-4);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .cta-content p {
    color: var(--color-text-secondary);
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--space-10);
    }

    .contact-info {
      position: static;
    }

    .social-links {
      flex-direction: column;
    }

    .social-link {
      justify-content: center;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .btn:hover,
    .social-link:hover {
      transform: none;
    }
  }
</style>