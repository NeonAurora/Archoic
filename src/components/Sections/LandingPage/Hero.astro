---
// src/components/sections/Hero.astro
---

<section class="hero">
  <div class="hero-background"></div>
  <div class="container">
    <div class="hero-content scroll-reveal">
      <h1 class="hero-title">
        Innovative SaaS, Mobile & AI Solutions
      </h1>
      <p class="hero-description">
        Your trusted software partner. Empowering your digital transformation with cutting-edge technology and expert engineering.
      </p>
      <div class="hero-actions">
        <a href="/contact" class="btn btn-primary">Start Your Project</a>
        <a href="/services" class="btn btn-glass">Explore Services</a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding: calc(var(--header-height) + var(--space-20)) 0 var(--space-20);
    overflow: hidden;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    background: var(--gradient-subtle);
    z-index: 0;
  }
  
  .hero-content {
    max-width: 900px;
    text-align: center;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: var(--space-6);
    line-height: 1.15;
    font-weight: 600;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
  }
  
  .hero-description {
    font-size: var(--font-size-xl);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
    line-height: var(--line-height-relaxed);
  }
  
  .hero-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-8);
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    text-decoration: none;
    border: 1px solid transparent;
    font-size: var(--font-size-base);
    cursor: pointer;
  }
  
  .btn-primary {
    background: var(--color-primary-600);
    color: white;
    border-color: var(--color-primary-600);
  }
  
  .btn-primary:hover {
    background: var(--color-primary-700);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }
  
  .btn-glass {
    background: var(--glass-background);
    backdrop-filter: var(--backdrop-blur);
    color: var(--color-text-primary);
    border-color: var(--glass-border);
  }
  
  .btn-glass:hover {
    background: var(--color-surface-elevated);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  @media (max-width: 768px) {
    .hero {
      padding: calc(var(--header-height) + var(--space-12)) 0 var(--space-12);
      min-height: auto;
    }
    
    .hero-actions {
      flex-direction: column;
      width: 100%;
    }
    
    .hero-actions .btn {
      width: 100%;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .btn:hover {
      transform: none;
    }
  }
</style>