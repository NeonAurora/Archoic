---
// src/components/sections/Hero.astro
---

<section class="hero">
  <img id="hero-background" src="/background.svg" alt="" />
  <div class="hero-content scroll-reveal">
    <h1 class="hero-title">
      Innovative SaaS, Mobile & AI Solutions
    </h1>
    <p class="hero-description">
      Your trusted software partner. Empowering your digital transformation with cutting-edge technology and expert engineering.
    </p>
    <div class="hero-actions">
      <a href="/contact" class="btn btn-primary">Start Your Project</a>
      <a href="/services" class="btn btn-secondary">Explore Services</a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: calc(var(--header-height) + 2rem) 1rem 2rem;
    overflow: hidden;
  }
  
  .hero-content {
    max-width: 800px;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: center;
  }
  
  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-bottom: 1rem;
    line-height: 1.2;
    font-weight: 600;
    color: #111827;
  }
  
  .hero-description {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: #4b5563;
    margin-bottom: 2rem;
    font-weight: 400;
    line-height: 1.6;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
    border-radius: 10px;
    transition: all 0.2s;
    text-decoration: none;
    border: 1px solid transparent;
    font-size: 1rem;
    cursor: pointer;
  }
  
  .btn-primary {
    color: white;
    background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
    box-shadow:
      inset 0 0 0 1px rgba(255, 255, 255, 0.12),
      inset 0 -2px 0 rgba(0, 0, 0, 0.24);
  }
  
  .btn-primary:hover {
    color: rgb(230, 230, 230);
    box-shadow: none;
  }

  .btn-secondary {
    color: #111827;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 1);
    color: rgb(78, 80, 86);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 80vh;
      padding: calc(var(--header-height) + 3rem) 1rem 2rem;
    }
    
    .hero-content {
      padding-top: 10%;
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
    }
    
    .hero-actions .btn {
      width: 100%;
      padding: 1rem 1.5rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .btn:hover {
      transform: none;
    }
  }
</style>