<style>
  .section {
    padding: var(--space-20) 0;
  }

  .why-choose {
    background: var(--gradient-subtle);
  }

  .section-title {
    text-align: center;
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-12);
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
