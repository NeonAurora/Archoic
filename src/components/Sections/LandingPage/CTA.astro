// src/components/sections/CTA.astro
---

<section class="cta section">
  <div class="container">
    <div class="cta-content scroll-reveal">
      <h2>Ready to Innovate?</h2>
      <p>Let's discuss your project and how Archoic can help. Contact us today for a free consultation.</p>
      <a href="/contact" class="btn btn-cta btn-large">Get Started</a>
    </div>
  </div>
</section>

<style>
  .section {
    padding: var(--space-20) 0;
  }

  .cta {
    background: var(--gradient-frost);
    border-radius: var(--radius-2xl);
    margin-left: var(--content-padding);
    margin-right: var(--content-padding);
    position: relative;
    overflow: hidden;
  }
  
  .cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-accent-600) 100%);
    opacity: 0.9;
    z-index: 0;
  }
  
  .cta-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: var(--space-20) var(--space-8);
  }
  
  .cta h2,
  .cta p {
    color: white;
  }
  
  .cta h2 {
    margin-bottom: var(--space-4);
    font-weight: 600;
    font-size: var(--font-size-4xl);
  }
  
  .cta p {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-8);
    opacity: 0.95;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-8);
    font-weight: var(--font-weight-semibold);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    text-decoration: none;
    border: 1px solid transparent;
    font-size: var(--font-size-base);
    cursor: pointer;
  }

  .btn-cta {
    background: white;
    color: var(--color-primary-700);
    border-color: white;
  }

  .btn-cta:hover {
    background: var(--color-gray-50);
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }
  
  .btn-large {
    padding: var(--space-4) var(--space-10);
    font-size: var(--font-size-lg);
  }

  @media (prefers-reduced-motion: reduce) {
    .btn:hover {
      transform: none;
    }
  }
</style>