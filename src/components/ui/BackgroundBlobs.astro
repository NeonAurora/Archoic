---
// src/components/ui/BackgroundBlobs.astro
---

<div class="global-bg-layers">
  <div class="animated-blobs">
    <div class="blob blob-yellow"></div>
    <div class="blob blob-blue"></div>
    <div class="blob blob-cyan"></div>
    <div class="blob blob-purple"></div>
    <div class="blob blob-chili"></div>
    <div class="blob blob-green"></div>
    <div class="blob blob-magenta"></div>
  </div>
  <div class="bg-blur-gradient"></div>
  <div class="bg-smoothing"></div>
</div>

<style>
  .global-bg-layers {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
  }

  .animated-blobs {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    filter: blur(100px);
  }

  .blob {
    position: absolute;
    width: 600px;
    height: 600px;
    border-radius: 50%;
    mix-blend-mode: normal;
    filter: blur(60px);
    will-change: transform;
  }

  .blob-yellow {
    background: radial-gradient(circle, 
      rgba(251, 191, 36, 0.5) 0%,
      rgba(251, 191, 36, 0.3) 30%,
      rgba(251, 191, 36, 0.15) 60%,
      rgba(251, 191, 36, 0.02) 100%
    );
    top: -10%;
    left: -10%;
    animation: path-diagonal-full 140s cubic-bezier(0.45, 0.05, 0.55, 0.95) infinite;
  }

  .blob-blue {
    background: radial-gradient(circle, 
      rgba(59, 130, 246, 0.5) 0%,
      rgba(59, 130, 246, 0.3) 30%,
      rgba(59, 130, 246, 0.15) 60%,
      rgba(59, 130, 246, 0.02) 100%
    );
    top: -10%;
    right: -10%;
    animation: path-diagonal-reverse 130s cubic-bezier(0.42, 0, 0.58, 1) infinite;
  }

  .blob-cyan {
    background: radial-gradient(circle, 
      rgba(6, 182, 212, 0.5) 0%,
      rgba(6, 182, 212, 0.3) 30%,
      rgba(6, 182, 212, 0.15) 60%,
      rgba(6, 182, 212, 0.02) 100%
    );
    bottom: -10%;
    left: 50%;
    animation: path-box-clockwise 150s cubic-bezier(0.4, 0.1, 0.6, 0.9) infinite;
  }

  .blob-purple {
    background: radial-gradient(circle, 
      rgba(168, 85, 247, 0.5) 0%,
      rgba(168, 85, 247, 0.3) 30%,
      rgba(168, 85, 247, 0.15) 60%,
      rgba(168, 85, 247, 0.02) 100%
    );
    top: 50%;
    left: -10%;
    animation: path-box-counter 120s cubic-bezier(0.48, 0.05, 0.52, 0.95) infinite;
  }

  .blob-chili {
    background: radial-gradient(circle, 
      rgba(239, 68, 68, 0.5) 0%,
      rgba(239, 68, 68, 0.3) 30%,
      rgba(239, 68, 68, 0.15) 60%,
      rgba(239, 68, 68, 0.02) 100%
    );
    top: 50%;
    left: 50%;
    animation: path-star 135s cubic-bezier(0.46, 0.03, 0.52, 0.96) infinite;
  }

  .blob-green {
    background: radial-gradient(circle, 
      rgba(34, 197, 94, 0.5) 0%,
      rgba(34, 197, 94, 0.3) 30%,
      rgba(34, 197, 94, 0.15) 60%,
      rgba(34, 197, 94, 0.02) 100%
    );
    top: 25%;
    left: -10%;
    animation: path-figure8 145s cubic-bezier(0.43, 0.08, 0.57, 0.92) infinite;
  }

  .blob-magenta {
    background: radial-gradient(circle, 
      rgba(236, 72, 153, 0.5) 0%,
      rgba(236, 72, 153, 0.3) 30%,
      rgba(236, 72, 153, 0.15) 60%,
      rgba(236, 72, 153, 0.02) 100%
    );
    bottom: -10%;
    right: -10%;
    animation: path-spiral 125s cubic-bezier(0.44, 0.05, 0.55, 0.95) infinite;
  }

  @keyframes path-diagonal-full {
    0% { transform: translate(0, 0) scale(1); }
    10% { transform: translate(30vw, 20vh) scale(1.1); }
    25% { transform: translate(70vw, 50vh) scale(0.95); }
    40% { transform: translate(90vw, 80vh) scale(1.15); }
    50% { transform: translate(95vw, 100vh) scale(1); }
    60% { transform: translate(60vw, 95vh) scale(1.1); }
    75% { transform: translate(20vw, 90vh) scale(0.9); }
    90% { transform: translate(-5vw, 50vh) scale(1.05); }
    100% { transform: translate(0, 0) scale(1); }
  }

  @keyframes path-diagonal-reverse {
    0% { transform: translate(0, 0) scale(1); }
    12% { transform: translate(-25vw, 25vh) scale(1.15); }
    28% { transform: translate(-60vw, 55vh) scale(0.95); }
    45% { transform: translate(-90vw, 85vh) scale(1.1); }
    55% { transform: translate(-95vw, 100vh) scale(1); }
    65% { transform: translate(-50vw, 95vh) scale(1.2); }
    80% { transform: translate(0, 90vh) scale(0.9); }
    95% { transform: translate(-10vw, 30vh) scale(1.05); }
    100% { transform: translate(0, 0) scale(1); }
  }

  @keyframes path-box-clockwise {
    0% { transform: translate(0, 0) scale(1); }
    15% { transform: translate(20vw, -15vh) scale(1.1); }
    25% { transform: translate(40vw, -35vh) scale(0.95); }
    35% { transform: translate(45vw, -50vh) scale(1.15); }
    45% { transform: translate(30vw, -80vh) scale(1); }
    55% { transform: translate(0, -95vh) scale(1.1); }
    65% { transform: translate(-35vw, -85vh) scale(0.9); }
    75% { transform: translate(-50vw, -50vh) scale(1.2); }
    85% { transform: translate(-45vw, -20vh) scale(0.95); }
    100% { transform: translate(0, 0) scale(1); }
  }

  @keyframes path-box-counter {
    0% { transform: translate(0, 0) scale(1); }
    14% { transform: translate(20vw, -15vh) scale(1.1); }
    28% { transform: translate(45vw, -25vh) scale(0.95); }
    42% { transform: translate(50vw, -5vh) scale(1.15); }
    56% { transform: translate(95vw, 0) scale(1); }
    70% { transform: translate(80vw, 40vh) scale(1.2); }
    84% { transform: translate(40vw, 20vh) scale(0.9); }
    100% { transform: translate(0, 0) scale(1); }
  }

  @keyframes path-star {
    0% { transform: translate(0, 0) scale(1); }
    12.5% { transform: translate(-45vw, -45vh) scale(1.1); }
    25% { transform: translate(0, 0) scale(0.95); }
    37.5% { transform: translate(45vw, -45vh) scale(1.15); }
    50% { transform: translate(0, 0) scale(1); }
    62.5% { transform: translate(45vw, 45vh) scale(1.2); }
    75% { transform: translate(0, 0) scale(0.9); }
    87.5% { transform: translate(-45vw, 45vh) scale(1.05); }
    100% { transform: translate(0, 0) scale(1); }
  }

  @keyframes path-figure8 {
    0% { transform: translate(0, 0) scale(1); }
    12% { transform: translate(25vw, 10vh) scale(1.1); }
    25% { transform: translate(50vw, -5vh) scale(0.95); }
    37% { transform: translate(75vw, 10vh) scale(1.15); }
    50% { transform: translate(50vw, 30vh) scale(1); }
    62% { transform: translate(75vw, 50vh) scale(1.1); }
    75% { transform: translate(50vw, 60vh) scale(0.9); }
    87% { transform: translate(25vw, 50vh) scale(1.2); }
    100% { transform: translate(0, 0) scale(1); }
  }

  @keyframes path-spiral {
    0% { transform: translate(0, 0) scale(1); }
    10% { transform: translate(-20vw, -15vh) scale(1.1); }
    20% { transform: translate(-50vw, -10vh) scale(0.95); }
    30% { transform: translate(-70vw, 10vh) scale(1.15); }
    40% { transform: translate(-65vw, 35vh) scale(1); }
    50% { transform: translate(-45vw, 45vh) scale(1.2); }
    60% { transform: translate(-25vw, 40vh) scale(0.9); }
    70% { transform: translate(-15vw, 25vh) scale(1.1); }
    80% { transform: translate(-10vw, 10vh) scale(0.95); }
    100% { transform: translate(0, 0) scale(1); }
  }

  .bg-blur-gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(120px);
    -webkit-backdrop-filter: blur(120px);
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.3) 0%, 
      rgba(255, 255, 255, 0.2) 100%
    );
  }

  .bg-smoothing {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.08);
  }

  @media (max-width: 768px) {
    .blob {
      width: 400px;
      height: 400px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .blob {
      animation: none;
    }
  }
</style>